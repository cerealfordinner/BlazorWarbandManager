<div class="card" style="width: 18rem;">
    <div class="card-header">
        <h3>@Name</h3>
    </div>
    <div class="card-body">
        <p>@Description</p>
        <p>@Cost</p>
    </div>
</div>

@code {
    [Parameter]
    public string? Name { get; set; }
    [Parameter]
    public string? Description { get; set; }
    [Parameter]
    public int Cost { get; set; }
}